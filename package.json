{
  "name": "upcoming-movies",
  "version": "1.0.0",
  "description": "Shows a list of upcoming movies and their information like name, image, gender, and more.",
  "main": "src/server/index.js",
  "scripts": {
    "build": "webpack --mode production",
    "start": "npm run build && node src/server/index.js",
    "client": "webpack-dev-server --mode development --devtool inline-source-map --hot",
    "server": "nodemon src/server/index.js",
    "dev": "cross-env NODE_ENV=development concurrently \"npm run server\" \"npm run client\"",
    "test-server": "cross-env NODE_ENV=development jest --config=server_jest.config.json",
    "test-client": "cross-env NODE_ENV=development jest --config=client_jest.config.json"
  },
  "author": "Vinicius Volpe",
  "license": "ISC",
  "dependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "axios": "^0.19.1",
    "babel-eslint": "^10.0.0",
    "babel-loader": "^8.0.0",
    "babel-polyfill": "^6.26.0",
    "clean-webpack-plugin": "^1.0.0",
    "concurrently": "^4.0.0",
    "cross-env": "^6.0.3",
    "css-loader": "^2.0.0",
    "dotenv": "^8.2.0",
    "eslint": "^5.0.0",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "express": "^4.16.3",
    "file-loader": "^3.0.0",
    "html-webpack-plugin": "^3.2.0",
    "nodemon": "^1.17.3",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "redis": "^2.8.0",
    "style-loader": "^0.23.0",
    "styled-components": "^5.0.0",
    "url-loader": "^1.0.1",
    "webpack": "^4.5.0",
    "webpack-cli": "^3.0.8",
    "webpack-dev-server": "^3.1.3"
  },
  "devDependencies": {
    "@testing-library/react": "^9.4.0",
    "babel-polyfill": "^6.26.0",
    "jest": "^24.9.0",
    "prettier": "1.19.1",
    "redis-mock": "^0.47.0",
    "supertest": "^4.0.2"
  }
}
